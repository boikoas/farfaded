<div class="row">
    <div class="container">
        <h2>Список ваших датчиков</h2>
        <button type="button" class="btn col-xs-8" data-toggle="collapse" data-target="#1">Выключатели света</button>
        <!--TODO Сюда вставить id вида датчика-->
        <ul id="1" class="collapse in col-xs-8">
            <div class="row frow">
                <h3 class="col-xs-7">Зал</h3>
                <input class="col-xs-1" type="checkbox" checked data-toggle="toggle">
            </div>
            <div class="row frow"><h3 class="col-xs-7">Кухня</h3><input class="col-xs-1" type="checkbox" checked data-toggle="toggle"></div>
            <div class="row frow"><h3 class="col-xs-7">Спальня</h3><input class="col-xs-1" type="checkbox" checked data-toggle="toggle"></div>
        </ul>

        <button type="button" class="btn col-xs-8" data-toggle="collapse" data-target="#2">Регулировка температуры</button>
        <ul id="2" class="collapse in col-xs-8">
            <div class="row frow">
                <h3 class="col-xs-7">Спальня</h3>
                <input id="ex1" data-slider-id='ex1Slider' type="text" data-slider-min="0" data-slider-max="20" data-slider-step="1" data-slider-value="14" />
            </div>
            <li class="row frow">
                <h3 class="col-xs-7">Кухня</h3>
                <input id="ex2" data-slider-id='ex2Slider' type="text" data-slider-min="0" data-slider-max="20" data-slider-step="1" data-slider-value="14" />
            </li>
        </ul>
    </div>
</div>

<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
<script>
    $('input:checkbox').bootstrapToggle({
        on: 'Включено',
        off: 'Выключено'
    });
</script>

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/9.9.0/css/bootstrap-slider.css" rel="stylesheet" type="text/css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/9.9.0/bootstrap-slider.min.js"></script>
<script>
    // With JQuery
    $('#ex1').slider({
        formatter: function (value) {
            return 'Текущее значение: ' + value;
        }
    });
    $('#ex2').slider({
        formatter: function(value) {
            return 'Текущее значение: ' + value;
        }
    })
</script>